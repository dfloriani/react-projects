{
    "version": 2,
    "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
      {
        "src": "server.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": "./data/db.json"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server.js"
      },
      { "src": "(.*)", "dest": "./src/index.js" }
    ]
  }